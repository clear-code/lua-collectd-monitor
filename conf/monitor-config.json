{
  "Host": "localhost:1883",
  "User": "test-user",
  "Password": "test-user",
  "Secure": false,
  "CleanSession": false,
  "ReconnectInterval": 5,
  "QoS": 2,
  "CommandTopic": "test-topic",
  "CommandResultTopic": "test-result-topic",
  "services": {
    "nginx": {
      "commands" : {
        "restart": "systemctl restart nginx 2>&1"
      }
    },
    "hello": {
      "commands": {
        "exec": "echo \"Hello World!\""
      }
    },
    "true": {
      "commands": {
        "exec": "/bin/true"
      }
    },
    "false": {
      "commands": {
        "exec": "/bin/false"
      }
    },
    "no-command": {
      "commands": {
        "exec": "/bin/no-command 2>&1"
      }
    }
  }
}
